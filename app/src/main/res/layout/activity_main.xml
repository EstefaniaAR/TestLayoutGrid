<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
            android:layout_width="368dp"
            android:layout_height="495dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/jonathan" android:id="@+id/imageView11"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/josep" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView12"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/jotaro" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView13"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/zepelin" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView14"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/dio" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView15"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/caesar" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView16"/>
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>